@model IEnumerable<Proyecyo.Models.Medicamento>

<p>
    <a asp-action="Create">Crear Nuevo Medicamentos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreMedicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFarmaciaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMedicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFarmaciaNavigation.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.CelularUsuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMedicamento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMedicamento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMedicamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
