@model Proyecyo.Models.Farmacia

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Farmacia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombrefarmacia" class="control-label"></label>
