@model PM_Trabajo_Final_Hospital.Models.Medico

@{
    ViewData["Title"] = "Agregar Médico";
}

<div class="bg-gradient-dark">
    <div class="page-header min-vh-50" style="background-image: url('../assets/img/photo-form5.jpg');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center mx-auto my-auto">
                    <h1 class="text-white mb-4" style="margin-top: -40px;">Agregar médico</h1>
                    <a asp-area="" asp-action="Index" class="btn bg-white text-dark mt-4">Volver al inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card card-body blur shadow-blur mx-3 mx-md-4 mt-n6 mb-4">
    <section class="py-sm-4 position-relative mt-5">
        <div class="container">
            <div class="card box-shadow-xl overflow-hidden mb-5">
                <div class="row">
                    <div class="col-lg-5 position-relative bg-cover px-0" style="background-image: url('../assets/img/photo-form1.jpg')" loading="lazy">
                        <div class="z-index-2 text-center d-flex h-100 w-100 d-flex m-auto justify-content-center">
                            <div class="mask bg-gradient-dark opacity-8"></div>
                            <div class="p-7 ps-sm-7 position-relative text-start my-auto z-index-2">
                                <h3 class="text-white">Contáctanos</h3>
                                <p class="text-white opacity-8 mb-4">Si te quieres poner en contacto con nosotros, te dejamos nuestros siguientes datos.</p>
                                <div class="d-flex p-2 text-white">
                                    <div>
                                        <i class="fas fa-phone text-sm"></i>
                                    </div>
                                    <div class="ps-3">
                                        <span class="text-sm opacity-8">+51 973 182 294</span>
                                    </div>
                                </div>
                                <div class="d-flex p-2 text-white">
                                    <div>
                                        <i class="fas fa-envelope text-sm"></i>
                                    </div>
                                    <div class="ps-3">
                                        <span class="text-sm opacity-8"><a href="mailto:cris_antonio2001@hotmail.com" class="text-white">cris_antonio2001@hotmail.com</a></span>
                                    </div>
                                </div>
                                <div class="d-flex p-2 text-white">
                                    <div>
                                        <i class="fas fa-map-marker-alt text-sm"></i>
                                    </div>
                                    <div class="ps-3">
                                        <span class="text-sm opacity-8">Av. Alfonso Ugarte 848, Lima 15082.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="card-header px-4 py-sm-4 py-3">
                            <h2 class="mb-3">Formulario</h2>
                            <p class="lead">Completa todos los datos requeridos para que procedas con la solicitud correctamente.</p>
                        </div>
                        <form asp-action="Create"  enctype="multipart/form-data">
                            @Html.ValidationSummary()
                            <div class="card-body pt-1 pb-0">
                                <div class="row">
                                    <div class="col-md-12 mb-2">
                                        <div class="form-group">
                                            <label asp-for="Nombrecompletomedico">Nombres completos:</label>
                                            <input asp-for="Nombrecompletomedico"  type="text" class="form-control" id="nombres" maxlength="40" placeholder="Ingrese los nombres completos." required>
                                            <span asp-validation-for="Nombrecompletomedico" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-group">
                                            <label asp-for="Dnimedico">DNI:</label>
                                            <input  asp-for="Dnimedico" type="number" class="form-control" id="dni" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="8" placeholder="Ingrese el N° DNI." required>
                                            <span asp-validation-for="Dnimedico" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-group">
                                            <label asp-for="Cedula" >Cédula:</label>
                                            <input  asp-for="Cedula"   type="number" class="form-control" id="cedula" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="20" placeholder="Ingrese el N° de cédula." required>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-group">
                                            <label asp-for="Salon">Salón:</label>
                                            <input  asp-for="Salon" type="text" class="form-control" id="salon" maxlength="30" placeholder="Ingrese la especialidad." required>
                                            <span asp-validation-for="Salon" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-group">
                                            <label asp-for="Fecha">Horario:</label>
                                            <input asp-for="Fecha" type="datetime-local" class="form-control" id="fechahora" required>
                                            <span asp-validation-for="Fecha" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-group">
                                            <label asp-for="Especialidad">Especialidad:</label>
                                            <input  asp-for="Especialidad" type="text" class="form-control" id="especialidad" maxlength="40" placeholder="Ingrese la especialidad." required>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-group">
                                            <label  asp-for="Usuario" class="control-label"></label>
                                            <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-group">
                                            <label asp-for="Colegiado"   class="control-label"></label>
                                            <select asp-for="IdColegiado" class="form-control" asp-items="ViewBag.IdColegiado"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-group">
                                            <label asp-for="Certificacion" class="control-label"></label>
                                            <select asp-for="IdCertificacion" class="form-control" asp-items="ViewBag.IdCertificacion"></select>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-4">
                                            <label asp-for="Foto">Escoger Img</label>
                                        </div>
                                        <div class="col-8">
                                            <input asp-for="Foto" class="form-control" />
                                            <span asp-validation-for="Foto" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <!-- <div class="col-md-12 mb-2">
                                        <div class="input-group input-group-static mb-4">
                                          <label for="descripcion">¿Cuál es la descripcion?:</label>
                                          <textarea type="text" class="form-control" id="descripcion" maxlength ="500" rows="4" placeholder="¿Quienes Somos?, Visión, Misión..." required></textarea>
                                        </div>
                                    </div> -->
                                </div>
                            </div>
                            <div class="row p-4 pt-0">
                                <div class="col-md-6 text-end ms-auto">
                                    <button type="submit" value="Agregar" class="btn bg-gradient-info mb-0">Agregar</button>
                                </div>
                            </div>

                        

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<footer class="footer pt-4 pb-4">
    <div class="container-fluid">
        <div class="row align-items-center justify-content-lg-between">
            <div class="col-lg-12 mb-lg-0 mb-4">
                <div class="copyright text-center text-sm text-muted text-lg-center">
                    © <script>
                          document.write(new Date().getFullYear())
                    </script>,
                    Hecho con <i class="fa fa-heart"></i> por
