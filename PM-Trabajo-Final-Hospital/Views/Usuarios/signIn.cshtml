@model signIn
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<main class="main-content  mt-0">
<section>
    <div class="page-header min-vh-100">
    <div class="container">
        <div class="row">
        <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto bg-white border-radius-lg tarjetita">
            <div class="card card-plain">
                <div class="card-header pb-0 text-start">
                    <h4 class="font-weight-bolder">Iniciar sesión</h4>
                    <p class="mb-0">Bienvenido, registra tus datos para ingresar al panel administrativo de <strong>Arzobispo Loayza</strong>.</p>
                </div>
                <div class="card-body">
                                <form asp-controller="Usuarios" asp-action="SignIN" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                    
                    <div class="mb-3">
                                        <label asp-for="Usuario1" class="col-md-2"></label>

                        <input asp-for="Usuario1" type="text" class="form-control form-control-lg" placeholder="Usuario" aria-label="Usuario" maxlength="20" required>
                                        <span asp-validation-for="Usuario1" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Password" class="colmd-2"></label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Contraseña" aria-label="Contraseña" required>
                         <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-check form-switch">
                  
                                        <input class="form-check-input" type="checkbox" id="rememberMe">

                                        <label class="form-check-label" for="rememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>

                                  
                                        </label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-0">Iniciar sesión</button>
                    </div>
                    <div class="text-center">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn bg-gradient-info w-100 my-4 mt-2 mb-2">Volver</a>
                    </div>
                    </form>
                </div>
                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                    <p class="mb-3 text-sm mx-auto">
                        ¿Aún no tienes una cuenta?
                                    <a asp-area="" asp-controller="Usuarios" asp-action="SignUP" class="text-primary text-gradient font-weight-bold"><strong>Registrate</strong></a>
                    </p>
                    <p class="mb-4 text-sm mx-auto">
                        ¿Olvidaste tu contraseña?
                                    <a asp-area=""  asp-action="OlvidoPassword" class="text-primary text-gradient font-weight-bold"><strong>Recuperar</strong></a>
                    </p>
                </div>

                         
            </div>
        </div>


        <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 end-0 text-center justify-content-center flex-column">
            <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center overflow-hidden" style="background-image: url('../assets2/img/medic-login.jpg');
        background-size: cover;">
            <span class="mask bg-gradient-primary opacity-6"></span>
            <h4 class="mt-5 text-white font-weight-bolder position-relative">"La salud es la riqueza real y no piezas de oro y plata"</h4>
            <p class="text-white position-relative">La salud no es solo no estar enfermos. La salud es sacar el máximo partido de nuestras habilidades físicas y mentales, disfrutar de aquello que nos rodea y, en definitiva, ser felices.</p>
            </div>
        </div>
        </div>
    </div>
    </div>
</section>
</main>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

