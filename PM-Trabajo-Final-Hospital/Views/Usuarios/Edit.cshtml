            <h1 class="text-white mb-4" style="margin-top: -40px;">Editar usuario</h1>
            <a asp-area="" asp-controller="Home" asp-action="Usuarios" class="btn bg-white text-dark mt-4">Volver al inicio</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card card-body blur shadow-blur mx-3 mx-md-4 mt-n6 mb-4">
     <section class="py-sm-4 position-relative mt-5">
          <div class="container">
            <div class="card box-shadow-xl overflow-hidden mb-5">
              <div class="row">
                  <div class="col-lg-5 position-relative bg-cover px-0" style="background-image: url('../assets/img/photo-form1.jpg')" loading="lazy">
