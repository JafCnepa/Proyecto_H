@model IEnumerable<Medico>

@{
    ViewData["Title"] = "Lista de Medicos";
    //reutilizar layout.cshtml
    Layout="~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3>Lista de medicos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary  form-control">Crear Medico</a>
    </div>
  </div>
<div>
    @if (Model.Count() > 0)
    {
     <table class="d-lg-table table-striped border">
         <tr>
             <ht>Nombre de Medico</ht>
             <th></th>
             
         </tr>
         @foreach (var med in Model)
         {
             <tr>
                 <td>@med.nombre</td>
                 <td>
<a class="btn btn-primary text-white" asp-action="Edit" 
asp-route-id="@med.id_medico">Editar</a>
<a class="btn btn-danger text-white" asp-action="Delete"
asp-route-id="@med.id_medico">Borrar</a>
                 </td>
             </tr>
         }
        </table>
    }
    else
    {
        <p> No hay medicos registrados</p>
    }
</div>