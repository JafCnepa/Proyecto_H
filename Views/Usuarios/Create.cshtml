@model Usuarios
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="Create">
    <div class="border-bottom p-3">
        <div class="form-group row">
            <h2 class="text-info p-lg-3">Nuevo Usuario</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6"></div>
                <label asp-for="nombre" class="form-label">Nombre Usuario</label>
                <input asp-for="nombre" class="form-control" />
                <label asp-for="apellido" class="form-label">Apellido Usuario</label>
                <input asp-for="apellido" class="form-control" />
                <label asp-for="dni" class="form-label">Dni</label>
                <input asp-for="dni" class="form-control" />
                <label asp-for="ruc" class="form-label">Ruc</label>
                <input asp-for="ruc" class="form-control" />
                <label asp-for="celular" class="form-label">Celular</label>
                <input asp-for="celular" class="form-control" />
                <label asp-for="correo" class="form-label">Correo</label>
                <input asp-for="correo" class="form-control" />
                <label asp-for="fecha_nacimiento" class="form-label">Fecha Nacimiento</label>
                <input asp-for="fecha_nacimiento" class="form-control" />
                <label asp-for="descripcion" class="form-label">Descripcion</label>
                <input asp-for="descripcion" class="form-control" />
                <label asp-for="clave" class="form-label">Clave</label>
                <input asp-for="clave" class="form-control" />
            </div>
        </div>
          <br />
          <div class="d-grid gap-2 d-md-block">
              <button type="submit" class="btn btn-primary">Crear Nuevo</button>
              <a asp-controller="Usuarios" asp-action="Index" 
              class="btn btn-success">Regresar</a>
          </div>
    </div>
</form>