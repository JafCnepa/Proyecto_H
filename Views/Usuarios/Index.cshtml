@model IEnumerable<Usuarios>

@{
    ViewData["Title"] = "Lista de Usuarios";
    //reutilizar layout.cshtml
    Layout="~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3>Lista de usuarios</h3>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary  form-control">Crear Usuario</a>
    </div>
  </div>
<div>
    @if (Model.Count() > 0)
    {
     <table class="d-lg-table table-striped border">
         <tr>
             <ht>Nombre de Usuario</ht>
             <th></th>
             
         </tr>
         @foreach (var usu in Model)
         {
             <tr>
                 <td>@usu.nombre</td>
                 <td>
<a class="btn btn-primary text-white" asp-action="Edit" 
asp-route-id="@usu.id_usuario">Editar</a>
<a class="btn btn-danger text-white" asp-action="Delete"
asp-route-id="@usu.id_usuario">Borrar</a>
                 </td>
             </tr>
         }
        </table>
    }
    else
    {
        <p> No hay usuarios registrados</p>
    }
</div>